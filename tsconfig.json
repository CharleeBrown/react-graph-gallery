{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "." // to allow absolute import
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/viz/CircularPackingBasic/index.js", "viz/ContinuousColorLegend/index.js"],
  "exclude": ["node_modules"],
}
